for _, keymap in ipairs(keymaps) do
	k("n", keymap[1], keymap[2])
end

-- better indenting
k("v", "<", "<gv")
k("v", ">", ">gv")

-- Move to window using the <ctrl> hjkl keys
k("n", "<C-.>", vim.lsp.buf.code_action, { desc = "Show code actions", remap = true })
k("n", "<C-h>", "<C-w>h", { desc = "Go to Left Window", remap = true })
k("n", "<C-j>", "<C-w>j", { desc = "Go to Lower Window", remap = true })
k("n", "<C-k>", "<C-w>k", { desc = "Go to Upper Window", remap = true })
k("n", "<C-l>", "<C-w>l", { desc = "Go to Right Window", remap = true })

-- diagnostic
local diagnostic_goto = function(next, severity)
	local go = next and vim.diagnostic.goto_next or vim.diagnostic.goto_prev
	severity = severity and vim.diagnostic.severity[severity] or nil
	return function()
		go({ severity = severity })
	end
end
k("n", "<leader>cd", vim.diagnostic.open_float, { desc = "Line Diagnostics" })
k("n", "]d", diagnostic_goto(true), { desc = "Next Diagnostic" })
k("n", "[d", diagnostic_goto(false), { desc = "Prev Diagnostic" })
k("n", "]e", diagnostic_goto(true, "ERROR"), { desc = "Next Error" })
k("n", "[e", diagnostic_goto(false, "ERROR"), { desc = "Prev Error" })
k("n", "]w", diagnostic_goto(true, "WARN"), { desc = "Next Warning" })
k("n", "[w", diagnostic_goto(false, "WARN"), { desc = "Prev Warning" })

k({ "i", "n", "s" }, "<esc>", function()
	vim.cmd("noh")
	return "<esc>"
end, { expr = true, desc = "Escape and Clear hlsearch" })

k("n", "<leader>wo", function()
	local current_buf = vim.api.nvim_get_current_buf()
	for _, buf in ipairs(vim.api.nvim_list_bufs()) do
		if buf ~= current_buf and vim.api.nvim_buf_is_loaded(buf) then
			vim.api.nvim_buf_delete(buf, { force = true })
		end
	end
end, { desc = "Close all other buffers" })

if vim.g.vscode then
	local code = require("vscode")

	k({ "n", "x", "i" }, "<C-d>", function()
		code.with_insert(function()
			code.action("editor.action.addSelectionToNextFindMatch")
		end)
	end)

	k("n", "R", function()
		code.action("editor.action.rename")
	end, { silent = true })
	k("n", "S", function()
		code.action("workbench.action.gotoSymbol")
	end, { silent = true })
	k("n", "gr", function()
		code.action("references-view.findReferences")
	end, { silent = true })
	k("n", "<leader>ca", function()
		code.action("editor.action.quickFix")
	end, { silent = true })
	k("n", ">", function()
		code.action("editor.action.indentLines")
	end, { silent = true })
	k("n", "<", function()
		code.action("editor.action.outdentLines")
	end, { silent = true })
	k("n", "<leader>s", function()
		code.action("workbench.action.files.save")
	end, { silent = true })
	k("n", ";", function()
		code.action("workbench.action.showCommands")
	end, { silent = true })

	-- GIT
	k("n", "<leader>gs", function()
		code.action("git.checkout")
