local k = vim.keymap.set

k("n", "<leader>r", ":restart<CR>")
k("n", "<C-s>", ":write<CR>")
k("n", "<leader>q", ":quit<CR>")
k("n", "<C-q>", ":bdel<CR>")

k({ "n", "v", "x" }, "<leader>y", '"+y<CR>')
k({ "n", "v", "x" }, "<leader>d", '"+d<CR>')

-- Splits
k("n", "<leader>|", ":vsplit<CR>")
k("n", "<leader>-", ":split<CR>")

-- Picker
k("n", "<C-p>", function()
	Snacks.picker.smart()
end)

