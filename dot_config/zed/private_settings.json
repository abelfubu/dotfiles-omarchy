{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_width": 500
  },
  "buffer_font_family": "BerkeleyMono Nerd Font",
  // "buffer_font_features": {
  //   "ss00": true
  // },
  "buffer_font_size": 18,
  "buffer_font_weight": 300,
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "git_panel": {
    "dock": "right",
    "default_width": 500
  },
  "hide_mouse": "on_typing_and_movement",
  "icon_theme": "Catppuccin Mocha",
  "outline_panel": { "dock": "right" },
  "indent_guides": { "enabled": false },
  "preview_tabs": { "enabled": true },
  "use_system_prompts": false,
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
    "show_tab_bar_buttons": false
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 16,
    "sticky_scroll": false,
    "indent_guides": {
      "show": "never"
    },
    "starts_open": true,
    "default_width": 500
  },
  "format_on_save": "on",
  "relative_line_numbers": "enabled",
  "scrollbar": {
    "show": "never"
  },
  "theme": "Aether",
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": true
  },
  "ui_font_family": "BerkeleyMono Nerd Font",
  "ui_font_size": 18,
  "ui_font_weight": 300,
  "vim_mode": true
}
