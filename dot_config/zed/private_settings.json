{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_features": {
    "ss00": true
  },
  "buffer_font_size": 17,
  "buffer_font_weight": 300,
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "git_panel": {
    "dock": "right",
    "default_width": 500
  },
  "hide_mouse": "on_typing_and_movement",
  "icon_theme": "Catppuccin Mocha",
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enabled": true
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 16,
    "sticky_scroll": false,
    "indent_guides": {
      "show": "never"
    },
    "starts_open": true,
    "default_width": 500
  },
  "format_on_save": "on",
  "relative_line_numbers": "enabled",
  "scrollbar": {
    "show": "never"
  },
  "theme": "Aether",
  "toolbar": {
    "quick_actions": false
  },
  "ui_font_family": "CommitMono Nerd Font",
  "ui_font_size": 17,
  "ui_font_weight": 300,
  "vim_mode": true
}
